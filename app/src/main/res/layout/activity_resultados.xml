<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_vlsm"
    android:padding="16dp"
    tools:context=".ResultadosActivity"
    android:contentDescription="@string/resultados_contenido">

    <LinearLayout
        android:id="@+id/layoutResultados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle"
        android:dividerPadding="8dp"
        android:layout_marginTop="8dp">

        <!-- Título -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CALCULADORA VLSM"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="@font/luckies"
            android:layout_marginBottom="4dp" />

        <!-- Aquí se insertan dinámicamente los resultados -->

        <!-- Botón al final -->
        <Button
            android:id="@+id/btnNuevoCalculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo Cálculo"
            android:textAllCaps="false"
            android:layout_marginTop="32dp"
            android:padding="12dp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>

